@using propertyProject.ViewModels
@model RegisterFormViewModel
@{
    ViewData["Title"] = "Register Page";
}
<body class="starter-page-page">
    <main class="main">
        <section id="starter-section" class="starter-section section">
            <div class="register-card col-lg-8" style=" width: 70%; margin: auto">
                <h2 class="text-center">Register</h2>
                <form method="post">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your Name">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gender" class="col-lg-2 control-label"></label>
                        <select class="form-control" asp-for="Gender" asp-items="Model.Genders">
                        <option value="">Select your gender</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                     </div>
                     <div class="form-group">
                        <label asp-for="CityId" class="col-lg-2 control-label"></label>
                        <select class="form-control" asp-for="CityId" asp-items="Model.Cities">
                        <option value="">Select your city</option>
                        </select>
                        <span asp-validation-for="CityId" class="text-danger"></span>
                     </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3 text-center">
                        <button type="submit" class="btn btn-primary">Register</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
</body>

<style>
    .register-card {
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #ffffff;
    }

        .register-card h2 {
            font-family: 'Montserrat', sans-serif;
            color: #008374;
            margin-bottom: 20px;
        }

        .register-card .btn-primary {
            background-color: #008374;
            border-color: #008374;
        }

            .register-card .btn-primary:hover {
                background-color: #005d51;
                border-color: #004a40;
            }

        .register-card .form-check-label {
            font-family: 'Poppins', sans-serif;
        }

        .register-card a {
            font-family: 'Poppins', sans-serif;
            color: #008374;
        }

            .register-card a:hover {
                color: #005d51;
            }
</style>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
