@using propertyProject.ViewModels
@model EditPropertyFormViewModel

@{
    ViewData["Title"] = "Edit Property";
}

<body class="starter-page-page">
    <main class="main">
        <section id="starter-section" class="starter-section section">
            <div class="container mt-5" style=" width: 80%; margin: auto">
                <h5 >
                    <i class="bi bi-pencil-fill"></i>
                    Edit Property
                </h5>
                <form asp-action="Edit" method="post">
                    <!-- Hidden field for Property ID -->
                    <input asp-for="Id" type="hidden" value="@Model.Id"/>

                    <!-- Address -->
                    <div class="form-group mb-3">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" type="text" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="form-group mb-3">
                        <label asp-for="Price"></label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <!-- Rooms Available -->
                    <div class="form-group mb-3">
                        <label asp-for="RoomsAvailable">Rooms Available</label>
                        <input asp-for="RoomsAvailable" type="number" class="form-control" />
                        <span asp-validation-for="RoomsAvailable" class="text-danger"></span>
                    </div>

                    <!-- Contact Number -->
                    <div class="form-group mb-3">
                        <label asp-for="ContactNumber">Contact Number</label>
                        <input asp-for="ContactNumber" type="text" class="form-control" />
                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                    </div>

                    <!-- Gender -->
                    <div class="form-group mb-3">
                        <label asp-for="Gender">Gender</label>
                        <select class="form-control" asp-for="Gender" asp-items="@Model.Genders"></select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="form-group mb-3">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" type="text" class="form-control form-control-lg" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Services -->
                    <div class="form-group mb-3">
                        <label for="services">Services</label>
                        <select id="services" name="SelectedServiceIds" asp-items="Model.AvailableServices" class="form-control" multiple="multiple"></select>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </form>
            </div>
        </section>
    </main>
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            // Initialize Select2 on the element with id 'services'
            $('#services').select2();
        });
    </script>
}

