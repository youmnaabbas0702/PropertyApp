<body>
    <header id="header" class="header fixed-top">

        <div class="topbar d-flex align-items-center">
            <div class="container d-flex justify-content-center justify-content-md-between">
                <div class="contact-info d-flex align-items-center">
                    <i class="bi bi-envelope d-flex align-items-center"><a href="mailto:yomnaa.2002.ya@gmail.com">yomnaa.2002.ya@gmail.com</a></i>
                    <i class="bi bi-phone d-flex align-items-center ms-4"><span>+20 102 834 3654</span></i>
                </div>
                <div class="social-links d-none d-md-flex align-items-center">
                    <a href="https://www.facebook.com/profile.php?id=61552966501789&mibextid=LQQJ4d" class="facebook"><i class="bi bi-facebook"></i></a>
                    <a href="https://www.linkedin.com/in/youmna-abbas-b3064a283?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app" class="linkedin"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div><!-- End Top Bar -->

        <div class="branding d-flex align-items-center">

            <div class="container position-relative d-flex align-items-center justify-content-between">
                <a asp-action="Index" asp-controller="Home" class="logo d-flex align-items-center">
                    <!-- Uncomment the line below if you also wish to use an image logo -->
                   @*  <img src="favicon.ico" alt="logo">  *@
                    <h1 class="sitename">Easy Stay</h1>
                    <span>.</span>
                </a>

                <nav id="navmenu" class="navmenu">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home<br></a></li>

                        @if (Context.Session.GetInt32("UserId") != null && (Context.Session.GetInt32("AdminId") == null))
                         {
                            <li class="dropdown">
                                <a href=""><span>your account</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                                <ul>
                                    <li><a asp-controller="User" asp-action="Index">Your account details</a></li>
                                    <li><a asp-controller="Account" asp-action="LogOut">Logout</a></li>
                                </ul>
                            </li>
                         }
                        else if (Context.Session.GetInt32("AdminId") != null)
                        {
                            <li><a asp-controller="Account" asp-action="LogOut">Logout</a></li>
                        }
                        else
                        {
                            <li><a asp-controller="Account" asp-action="Login">Login</a></li>
                        }
                        <li><a asp-action="About" asp-controller="Home">About Us</a></li>
                        <li class="dropdown">
                            <a href="#"><span>Cities</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                            <ul>
                                <li><a asp-controller="Property" asp-action="Index" asp-route-id="1">Sadat City</a></li>
                                <li><a asp-controller="Property" asp-action="Index" asp-route-id="2">Shebin Elkom</a></li>
                                <li><a asp-controller="Property" asp-action="Index" asp-route-id="3">Menouf</a></li>
                            </ul>
                        </li>
                    </ul>
                    <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
                </nav>

            </div>

        </div>

    </header>

    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 110px;">
            @RenderBody()
        </main>
    </div>


    <footer id="footer" class="footer accent-background">

        <div class="container footer-top">
            <div class="row gy-4">
                <div class="col-lg-5 col-md-12 footer-about">
                    <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center">
                        <span class="sitename">Easy Stay</span>
                    </a>
                    <p>Your trusted platform for seamless university housing searches across Menofia.
                        Stay informed and connected with property owners, all in one place.</p>
                    <div class="social-links d-flex mt-4">
                        <a href="https://www.facebook.com/profile.php?id=61552966501789&mibextid=LQQJ4d"><i class="bi bi-facebook"></i></a>
                        <a href="https://www.linkedin.com/in/youmna-abbas-b3064a283?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=ios_app"><i class="bi bi-linkedin"></i></a>
                    </div>
                </div>

                <div class="col-lg-2 col-6 footer-links">
                    <h4>Useful Links</h4>
                    <ul>
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a >About us</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Privacy policy</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-6 footer-links">
                    <h4>Our Services</h4>
                    <ul>
                        <li>Property Search</li>
                        <li>Property Details</li>
                        <li>Contact Property Owners</li>
                        <li>Custom Filters</li>
                        <li>User Support</li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-12 footer-contact text-center text-md-start">
                    <h4>Contact Us</h4>
                    <p>XYZ Street</p>
                    <p>Ashmoun, Menofia</p>
                    <p>Egypt</p>
                    <p class="mt-4"><strong>Phone:</strong> <span>+20 102 834 3654</span></p>
                    <p><strong>Email:</strong> <span>yomnaa.2002.ya@gmail.com</span></p>
                </div>

            </div>
        </div>

        <div class="container copyright text-center mt-4">
            <p>© <span>Copyright</span> <strong class="px-1 sitename">Stay Easy</strong> <span>All Rights Reserved</span></p>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/php-email-form/validate.js"></script>
