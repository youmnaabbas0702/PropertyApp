@model Property

@{
    ViewData["Title"] = "Property details";
}

<body class="starter-page-page">
    <main class="main">
        <section id="starter-section" class="starter-section section">
            <div class="container mt-3" style="width: 80%; margin: auto">
                <!-- navigation Section -->
                <div class="navbar" style="width: 90%;margin: auto">
                    <ul>
                        <li><a href="#overview" class="active">Overview</a></li>
                        <li><a href="#description">Description</a></li>
                        <li><a href="#facilities">Facilities</a></li>
                        <li><a href="#availability">Availability</a></li>
                        <li><a href="#contact">Contact info</a></li>
                    </ul>
                </div>
                
                <!-- overview Section -->
                <section id="overview" class="container" style="margin-top:0;margin-bottom: 0; padding-bottom: 0;">
                    <div id="carouselExampleCaptionsAutoplay" class="carousel slide" data-bs-ride="carousel" style="max-width: 700px; margin: auto;">
                        <!-- Carousel Indicators -->
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptionsAutoplay" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            @for(int i = 1; i< Model.Images.Count; i++)
                            {
                                <button type="button" data-bs-target="#carouselExampleCaptionsAutoplay" data-bs-slide-to="@i" aria-label="Slide @(i+1)"></button>
                            }
                        </div>

                        <!-- Carousel Inner -->
                        <div class="carousel-inner" style="margin-top: 0;">
                            <h4 style="margin-bottom: 20px;">@Model.Address</h4>
                            @foreach (var image in Model.Images)
                            {
                                <div class="carousel-item active">
                                    <a><img src="~/@image.ImagePath" class="d-block w-100" alt="property image"></a>
                                    <div class="carousel-caption d-none d-md-block">
                                        <p>property images.</p>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Carousel Controls -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptionsAutoplay" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptionsAutoplay" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <!-- description Section -->
                    <section id="description" class="container" style="margin-top: 30px; padding-top: 0; padding-bottom: 20px;">
                        <h3>Description</h3>
                        <p>@Model.Description</p>
                    </section>

                    <!-- Availability Section -->
                    <section id="availability" class="container" style="margin-top:0;margin-bottom: 0; padding-top: 0;  padding-bottom: 20px;">
                        <h3>Availability</h3>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Price:</strong> @Model.Price</p>
                                <p><strong>Rooms Available:</strong> @Model.RoomsAvailable</p>
                            </div>
                        </div>
                    </section>

                    <!-- Facilities Section -->
                    <section id="facilities" class="container mt-3" style="padding-top: 0; padding-bottom: 20px;">
                        <h3>Facilities</h3>
                        <div class="row">
                            @foreach (var propertyservice in Model.PropertyServices)
                            {
                                <div class="col-md-3 text-center">
                                    <i class="@propertyservice.Service.Icon" style="font-size: 2em;"></i>
                                    <p>@propertyservice.Service.Name</p>
                                </div>
                            }
                        </div>
                    </section>

                    <!-- Contact Section -->
                    <section id="contact" class="container" style="padding-top: 0;">
                        <h3>Contact Info</h3>
                        <p>Phone: @Model.ContactNumber</p>
                    </section>

                </section>
            </div>
        </section>
    </main>
</body>
<style>
    /* Navbar Styles */
    .navbar {
        background-color: var(--white) !important;
        border-color: var(--white) !important;
    }

        .navbar ul {
            list-style-type: none;
            display: flex;
            justify-content: space-between;
            border-bottom: 1px solid lightgray;
            padding-bottom: 10px;
        }

            .navbar ul li {
                margin: 0 20px;
            }

                .navbar ul li a {
                    text-decoration: none;
                    color: black !important;
                    font-size: 16px;
                    padding: 8px 10px;
                    background-color: var(--white) !important; /* Ensure white background */
                }

                    .navbar ul li a.active {
                        /* color: blue !important; */
                        border-bottom: 2px solid #008374;
                    }

                    .navbar ul li a:hover {
                        color: #008374 !important;
                    }
</style>